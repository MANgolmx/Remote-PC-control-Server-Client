<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <EditText
        android:layout_width="66dp"
        android:layout_height="60dp"
        android:hint="Sec"
        android:id="@+id/editTextTimeSeconds"
        android:layout_toRightOf="@+id/editTextTimeMinutes"
        android:inputType="number"/>

     <EditText
        android:layout_width="66dp"
        android:layout_height="60dp"
        android:hint="Min"
        android:id="@+id/editTextTimeMinutes"
        android:layout_toRightOf="@+id/editTextSongs"
        android:inputType="number"/>

     <EditText
        android:layout_width="67dp"
        android:layout_height="60dp"
        android:layout_marginLeft="22dp"
        android:hint="Songs"
        android:id="@+id/editTextSongs"
        android:inputType="number"/>

    <Button
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/editTextTimeSeconds"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp"
        android:text="SHUTDOWN"
        android:id="@+id/buttonShutdown"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginLeft="22dp"
        android:hint="Application"
        android:layout_below="@+id/editTextTimeSeconds"
        android:id="@+id/editTextApp"
        android:inputType="textCapCharacters"/>

    <Button
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/editTextApp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp"
        android:text="Open"
        android:id="@+id/buttonOpen"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginLeft="22dp"
        android:hint="Message"
        android:layout_below="@+id/editTextApp"
        android:id="@+id/editTextMsg"
        android:inputType="text"/>

    <Button
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@id/editTextMsg"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp"
        android:text="Send"
        android:id="@+id/buttonSendMsg"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="22dp"
        android:text="Disconnect"
        android:id="@+id/buttonDisconnect"/>

</RelativeLayout>
